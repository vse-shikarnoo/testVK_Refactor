<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.vk.usersapp.feature.feed.ui.UserListFragment"
        android:label="UserListFragment"
        tools:layout="@layout/fr_user_list">
        <action
            android:id="@+id/action_userListFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.vk.usersapp.feature.feed.ui.DetailUserFragment"
        android:label="DetailUserFragment"
        tools:layout="@layout/fr_detail_user">
        <argument
            android:name="user"
            app:argType="com.vk.usersapp.feature.feed.model.User" />
    </fragment>
</navigation>